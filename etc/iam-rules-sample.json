{
    "demo:demo": {
        "Statement": [
            {
                "Sid": "FullAccess",
                "Action": [
                    "s3:*"
                ],
                "Effect": "Allow",
                "Resource": [
                    "*"
                ]
            }
        ]
    },
    "demo:user1": {
        "Statement": [
            {
                "Sid": "User1BucketAllObjects",
                "Action": [
                    "s3:ListBucket",
                    "s3:GetObject",
                    "s3:PutObject",
                    "s3:DeleteObject"
                ],
                "Effect": "Allow",
                "Resource": [
                    "arn:aws:s3:::user1bucket*",
                    "arn:aws:s3:::user1bucket*/*"
                ]
            },
            {
                "Sid": "SharedBucketUser1Objects",
                "Action": [
                    "s3:GetObject",
                    "s3:PutObject",
                    "s3:DeleteObject"
                ],
                "Effect": "Allow",
                "Resource": [
                    "arn:aws:s3:::sharedbucket/user1_*"
                ]
            },
            {
                "Sid": "SharedBucketAllObjects",
                "Action": [
                    "s3:GetObject",
                    "s3:ListBucket",
                    "s3:GetIntelligentTieringConfiguration",
                    "s3:PutIntelligentTieringConfiguration",
                    "s3:GetBucketTagging",
                    "s3:PutBucketTagging"
                ],
                "Effect": "Allow",
                "Resource": [
                    "arn:aws:s3:::sharedbucket",
                    "arn:aws:s3:::sharedbucket/*"
                ]
            },
            {
                "Sid": "NavToUserFolder",
                "Action": "s3:ListBucket",
                "Effect": "Allow",
                "Resource": "arn:aws:s3:::companybucket",
                "Condition": {"StringEquals":{"s3:prefix":["", "home/", "home/user1/"]}}
            },
            {
                "Sid": "UserFolder",
                "Action": "s3:ListBucket",
                "Effect": "Allow",
                "Resource": "arn:aws:s3:::companybucket",
                "Condition": {"StringLike":{"s3:prefix":["home/user1/*"]}}
            },
            {
                "Sid": "UserFolderObjects",
                "Action": ["s3:*"],
                "Effect": "Allow",
                "Resource": ["arn:aws:s3:::companybucket/home/user1/*"]
            },
            {
                "Sid": "objectlockconfiguration",
                "Action": [
                    "s3:ListBucket",
                    "s3:GetBucketObjectLockConfiguration",
                    "s3:PutBucketObjectLockConfiguration"
                ],
                "Effect": "Allow",
                "Resource": [
                    "arn:aws:s3:::shared-bucket-config",
                    "arn:aws:s3:::shared-bucket-config/*"
                ]
            },
            {
                "Sid": "legal-hold",
                "Action": [
                    "s3:GetObject",
                    "s3:ListBucket",
                    "s3:GetObjectLegalHold",
                    "s3:PutObjectLegalHold"
                ],
                "Effect": "Allow",
                "Resource": [
                    "arn:aws:s3:::shared-bucket-hold",
                    "arn:aws:s3:::shared-bucket-hold/obj*"
                ]
            },
            {
                "Sid": "retention",
                "Action": [
                    "s3:GetObject",
                    "s3:ListBucket",
                    "s3:GetObjectRetention",
                    "s3:PutObjectRetention"
                ],
                "Effect": "Allow",
                "Resource": [
                    "arn:aws:s3:::shared-bucket-retention",
                    "arn:aws:s3:::shared-bucket-retention/obj-retention*"
                ]
            },
            {
                "Sid": "bypass",
                "Action": [
                    "s3:GetObject",
                    "s3:ListBucket",
                    "s3:BypassGovernanceRetention"
                ],
                "Effect": "Allow",
                "Resource": [
                    "arn:aws:s3:::shared-bucket-bypass",
                    "arn:aws:s3:::shared-bucket-bypass/obj-delete*"
                ]
            }
        ]
    },
    "account2:admin": {
        "Statement": [
            {
                "Sid": "FullAccess",
                "Action": [
                    "s3:*"
                ],
                "Effect": "Allow",
                "Resource": [
                    "*"
                ]
            }
        ]
    },
    "account2:user1": {
        "Statement": [
            {
                "Sid": "SharedBucketAllObjects",
                "Action": [
                    "s3:GetBucketAcl",
                    "s3:GetObject",
                    "s3:ListBucket",
                    "s3:PutBucketAcl"
                ],
                "Effect": "Allow",
                "Resource": [
                    "arn:aws:s3:::sharedbucket",
                    "arn:aws:s3:::sharedbucket/*"
                ]
            },
            {
                "Sid": "UserBuckets",
                "Action": ["s3:*"],
                "Effect": "Allow",
                "Resource": [
                    "arn:aws:s3:::user1*",
                    "arn:aws:s3:::user1*/*"
                ]
            }
        ]
    }
}
