[DEFAULT]
bind_port = 5000
workers = 1
user = %USER%
log_facility = LOG_LOCAL0
log_level = DEBUG
eventlet_debug = true
sds_default_account = AUTH_demo

sds_namespace = OPENIO
sds_proxy_url = http://127.0.0.1:6000

[pipeline:main]
pipeline = catch_errors bucket-logging cache listing_formats iam intelligent_tiering bucket_quotas s3api tempauth proxy-logging copy slo versioned_writes symlink proxy-server

[app:proxy-server]
use = egg:swift#oio_proxy
allow_account_management = true
account_autocreate = true
log_name = OIO,NS,oioswift,1
sds_connection_timeout=5
sds_read_timeout=20
sds_write_timeout=20
delete_slo_parts=true

[filter:gatekeeper]
use = egg:swift#gatekeeper

[filter:proxy-logging]
use = egg:swift#proxy_logging

[filter:bucket-logging]
use = egg:swift#bucket_logging

[filter:catch_errors]
use = egg:swift#catch_errors

[filter:ratelimit]
use = egg:swift#ratelimit

[filter:healthcheck]
use = egg:swift#healthcheck

[filter:cache]
use = egg:swift#oiomemcache
memcache_servers = 127.0.0.1:11211

[filter:listing_formats]
use = egg:swift#listing_formats

[filter:slo]
use = egg:swift#slo

[filter:staticweb]
use = egg:swift#staticweb

[filter:iam]
use = egg:swift#oioiam
log_level = DEBUG
connection = %IAM_RULES_CONN%

[filter:s3api]
use = egg:swift#s3api
location = RegionOne
force_swift_request_proxy_log = true
log_level = DEBUG
storage_domain = localhost
s3_acl = true
check_bucket_owner = true
# min_segment_size = 8
bucket_db_connection = oio://
allow_anonymous_path_requests = false
s3_only = true

[filter:tempauth]
use = egg:swift#tempauth
log_level = DEBUG
# Main user of the account AUTH_demo
user_demo_demo = DEMO_PASS .admin
# Unpriviledged users of the account AUTH_demo
user_demo_user1 = USER_PASS
user_demo_user2 = USER_PASS
user_demo_user3 = USER_PASS

# Main user of the account AUTH_account2
user_account2_admin = ADMIN_PASS .admin
# Unpriviledged user of the account AUTH_account2
user_account2_user1 = USER_PASS

# Log delivery user
user64_bG9nZ2Vy_LmxvZ19kZWxpdmVyeQ = LOG_DELIVERY  # logger:.log_delivery

# Note: Put after iam and before s3api in the pipeline.
[filter:bucket_quotas]
use = egg:swift#bucket_quotas
# Maximum size of the bucket in bytes.
# quota_bytes =
# Maximum object count of the bucket.
# quota_objects =

[filter:versioned_writes]
use = egg:swift#versioned_writes
allow_versioned_writes = true
allow_object_versioning = true
allow_oio_versioning = true

[filter:copy]
use = egg:swift#copy

[filter:symlink]
use = egg:swift#symlink
# Symlinks can point to other symlinks provided the number of symlinks in a
# chain does not exceed the symloop_max value. If the number of chained
# symlinks exceeds the limit symloop_max a 409 (HTTPConflict) error
# response will be produced.
# symloop_max = 2

# Note: Put after iam and before s3api in the pipeline.
[filter:intelligent_tiering]
use = egg:swift#intelligent_tiering
# URL: amqp://username:password@host:port[/vitual_host]
rabbitmq_url = amqp://guest:guest@localhost:5672
rabbitmq_exchange = pca
rabbitmq_queue = pca
# Use durable exchange and queue
rabbitmq_durable = True
# Use auto-delete exchange and queue
rabbitmq_auto_delete = False
# Authorized action according to the bucket states.
# Each action can have 0, 1, x possible bucket states and be comma separated.
# Empty means no bucket states allowed.
# Possible States are: 
#   None, Locked, Archiving, Draining, Archived, Restoring, 
#   Restored, Deleting, Flushed
it_iam_create_bucket_actions = None
it_iam_delete_bucket_actions = None, Flushed
it_iam_put_object_actions = None
it_iam_get_object_actions = Restored
it_iam_delete_object_actions = None
